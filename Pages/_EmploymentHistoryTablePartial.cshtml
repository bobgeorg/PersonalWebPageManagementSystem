@using PersonalWebPageManagementSystem.ViewModels;
@model IEnumerable<ResumeExperienceVm>
<table class="table table-bordered" id="experienceTable">
    <thead>
        <tr>
            <th>
                JobTitle
            </th>
            <th>
                Employer
            </th>
            <th>
                City
            </th>
            <th>
                FromDate
            </th>
            <th>
                ToDate
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var experienceVm in Model)
            {
        <tr>
            <td>
                @experienceVm.JobTitle
            </td>
            <td>
                @experienceVm.Employer
            </td>
            <td>
                @experienceVm.City
            </td>
            <td>
                @experienceVm.FromDate
            </td>
            <td>
                @experienceVm.ToDate
            </td>
            <td text-right">
                <a onclick="jQueryModalGet('?handler=ExperienceCreateOrEdit&id=@experienceVm.Id','Edit Customer')" class="btn btn-info text-white"> Edit</a>
                <form method="post" asp-page="Index" asp-route-id="@experienceVm.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> Delete</button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#customerTable").DataTable();
    });
</script>