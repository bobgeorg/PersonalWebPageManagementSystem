@using PersonalWebPageManagementSystem.ViewModels
@model ResumeExperienceVm
@{
}

<div class="container">
    <form id="create-form" method="post" asp-page="BuildResume" asp-page-handler="ExperienceCreated" onsubmit="return jQueryModalPost(this);">
        <div class="row">
            <div class="col-md-10">
                <label asp-for="@Model.JobTitle"></label>
                <input class="form-control" asp-for="@Model.JobTitle" />
                <span asp-validation-for="@Model.JobTitle"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <label class="form_item" asp-for="@Model.Employer"></label>
                <input class="form-control form_item" asp-for="@Model.Employer" />
                <span asp-validation-for="@Model.Employer"></span>
            </div>
         </div>
         <div class="row">
            <div class="col-md-4">
                <label class="form_item" asp-for="@Model.City"></label>
                <input class="form-control form_item" asp-for="@Model.City" />
                <span asp-validation-for="@Model.City"></span>
            </div>
            <div class="col-md-3">
                <label class="form_item" asp-for="@Model.FromDate"></label>
                <input class="form-control form_item" asp-for="@Model.FromDate" />
                <span asp-validation-for="@Model.FromDate"></span>
            </div>
            <div class="col-md-3">
                <label class="form_item" asp-for="@Model.ToDate"></label>
                <input class="form-control form_item" asp-for="@Model.ToDate" />
                <span asp-validation-for="@Model.ToDate"></span>
            </div>
        </div>
        <div class="form-group justify-content-between">
            <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary save-button">Save</button>
        </div>
    </form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
       
</div>

